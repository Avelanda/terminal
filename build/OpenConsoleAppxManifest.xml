            <desktop:ExecutionAlias Alias="OpenConsole.exe" />
            <desktop:ExecutionAlias Alias="conhost.exe" />
          </uap3:AppExecutionAlias>
        </uap3:Extension>
      </Extensions>
    </Application>
  </Applications>
  <Capabilities>
    <rescap:Capability Name="runFullTrust" />
    <rescap:Capability Name="unvirtualizedResources" />
  </Capabilities>
